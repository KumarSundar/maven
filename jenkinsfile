pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'nginx-custom'
        DOCKER_FILE = 'Dockerfile'
        NGINX_PORT = 8081
        CONTAINER_NAME = 'nginx1-container'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build(DOCKER_IMAGE, "-f ${DOCKER_FILE} .")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run Docker container
                    docker.image(DOCKER_IMAGE).run("-p ${NGINX_PORT}:80 --name ${CONTAINER_NAME} -d")
                }
            }
        }

        stage('Verify Container') {
            steps {
                script {
                    // Verify container is running
                    sh "docker ps | grep ${CONTAINER_NAME}"
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    // Stop and remove container
                    docker.image(DOCKER_IMAGE).inside("--name ${CONTAINER_NAME}") {
                         sh 'nginx -s quit' // Gracefully stop Nginx inside the container
                    }
                    docker.image(DOCKER_IMAGE).remove("${CONTAINER_NAME}")
                    
                }
            }
        }
    }
}
